{
  "name": "@marcfargas/go-holded",
  "version": "0.1.0",
  "description": "Holded API made easy â€” invoicing, CRM, accounting, projects, team. Library + CLI for AI agents and humans.",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./bin": "./dist/bin/holded.js",
    "./contacts": "./dist/contacts/index.js",
    "./accounting": "./dist/accounting/index.js",
    "./taxes": "./dist/taxes/index.js",
    "./cash": "./dist/cash/index.js",
    "./invoicing": "./dist/invoicing/index.js",
    "./stock": "./dist/stock/index.js",
    "./team": "./dist/team/index.js",
    "./crm": "./dist/crm/index.js",
    "./projects": "./dist/projects/index.js"
  },
  "bin": {
    "go-holded": "dist/bin/holded.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "npm run lint && npm run format:check && npm run build && npm run test"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "holded",
    "api",
    "erp",
    "invoicing",
    "crm",
    "accounting",
    "ai-agent",
    "pi-package"
  ],
  "pi": {
    "skills": [
      "./skills"
    ]
  },
  "files": [
    "dist",
    "skills",
    "README.md"
  ],
  "author": "Marc Fargas <marc@marcfargas.com>",
  "license": "MIT",
